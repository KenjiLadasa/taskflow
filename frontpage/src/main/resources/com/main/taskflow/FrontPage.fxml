<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.main.taskflow.FrontPageController"
            prefWidth="900.0" prefHeight="500.0"
            style="-fx-background-color: black;">

    <VBox spacing="40"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          alignment="CENTER">

        <Label text="TASK FLOW"
               style="-fx-text-fill: #8d2cff; -fx-font-size: 90px; -fx-font-weight: bold;"/>

        <Button fx:id="startButton" text="LET'S GET STARTED"
                onAction="#onStart"
                style="-fx-background-color: #8d2cff;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 20;
                       -fx-padding: 10 20;"/>

    </VBox>

</AnchorPane>
