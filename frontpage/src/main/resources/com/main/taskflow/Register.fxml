<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600" prefWidth="600" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.taskflow.RegisterController">

    <!-- White form container -->
    <VBox alignment="CENTER" maxHeight="450" maxWidth="350" spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

        <Label style="-fx-text-fill: #673AB7; -fx-font-size: 24px; -fx-font-weight: bold;" text="SIGN UP" />

        <TextField fx:id="usernameField" maxWidth="250" promptText="Username" />
        <TextField fx:id="emailField" maxWidth="250" promptText="Email" />
        <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="250" promptText="Confirm Password" />

        <HBox alignment="CENTER_LEFT" maxWidth="250" spacing="5">
            <CheckBox fx:id="termsCheckBox" text="I agree to the Terms of Use" />
        </HBox>

        <!-- Sign Up and Back to Log in buttons -->
        <HBox alignment="CENTER" spacing="10">
            <!-- Back to log in button -->
            <Button onAction="#goToLogin" style="-fx-font-size: 18; -fx-background-color: transparent; -fx-text-fill: black;" text="â†" />

            <!-- Sign Up button -->
            <Button onAction="#handleSignUp" style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-pref-width: 150;" text="SIGN UP" />
        </HBox>

    </VBox>
</StackPane>
