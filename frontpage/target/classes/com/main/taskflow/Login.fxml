<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.taskflow.LoginController" style="-fx-background-color: black;" prefWidth="600" prefHeight="600">

    <!-- White form container -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" maxWidth="350" maxHeight="400">

        <Label text="LOGIN" style="-fx-text-fill: #673AB7; -fx-font-size: 24px; -fx-font-weight: bold;"/>

        <TextField fx:id="emailField" promptText="Email" maxWidth="250"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

        <HBox spacing="20" alignment="CENTER_LEFT" maxWidth="250">
            <CheckBox fx:id="rememberMeCheckBox" text="Remember me" />
            <Label text="Forgot Password?" style="-fx-text-fill: #333333;"/>
        </HBox>

        <Button text="LOGIN" onAction="#handleLogin"
                style="-fx-background-color: #673AB7; -fx-text-fill: white; -fx-font-weight: bold;"/>


        <HBox spacing="5" alignment="CENTER">
            <Label text="Donâ€™t have an account?" />
            <Hyperlink text="Register" onAction="#goToRegister"/>
        </HBox>

    </VBox>
</StackPane>
